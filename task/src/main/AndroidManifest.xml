<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="blak.temp.backgroundwork">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".TaskApp"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme">

        <activity android:name=".robospicesample.SpiceCounterActivity"
                  android:label="Robospice Counter">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity android:name="blak.temp.backgroundwork.tasksample.TaskActivity"
                  android:label="Task Counter">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name="com.octo.android.robospice.UncachedSpiceService"
            android:exported="false"/>

    </application>

</manifest>
